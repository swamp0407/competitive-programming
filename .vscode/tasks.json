{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "do oj test @python",
            "command": "oj",
            "args": [
                "t",
                "-c",
                "python3 ${file}",
                "-d",
                "${fileDirname}/tests/",
                "&&",
                "cd",
                "${fileDirname}",
                "&&",
                "acc",
                "s",
                "--skip-filename",
                "--",
                "--guess-python-interpreter",
                "pypy"
            ],
            "group": {
                "kind": "build",
                // "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build c++ {file}",
            "type": "shell",
            "command": "g++-11",
            "args": [
                "-g",
                "-O0",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-Werror",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "do oj test @c++",
            "command": "oj",
            "args": [
                "t",
                "-c",
                "${fileDirname}/a.out",
                "-d",
                "${fileDirname}/tests/",
                "&&",
                "cd",
                "${fileDirname}",
                "&&",
                "acc",
                "s",
                "${fileDirname}/main.cpp",
                "--"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "build c++ {file}"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "do test @c++ by using input.txt",
            "command": "${fileDirname}/a.out",
            "args": [
                "<",
                "${fileDirname}/input.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build c++ {file}"
            ],
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 アクティブなファイルのビルド",
            "command": "/usr/local/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "デバッガーによって生成されたタスク。"
        }
    ]
}