{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "do oj test @python",
            "command": "oj",
            "args": [
                "t",
                "-c", 
                "python3 ${file}",
                "-d",
                "${fileDirname}/tests/",
                "&&",
                "cd", "${fileDirname}",
                "&&",
                "acc","s","--skip-filename", "--" ,"--guess-python-interpreter" ,"pypy", 
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build c++ main.cpp",
            "type": "shell",
            "command": "g++-11",
            "args": [
                "-g",
                "-O0",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-Werror",
                "${fileDirname}/main.cpp",
                "-o",
                "${fileDirname}/a.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "do oj test @c++",
            "command": "oj",
            "args": [
                "t",
                "-c", 
                "${fileDirname}/a.out",
                "-d",
                "${fileDirname}/tests/",
                "&&",
                "cd", "${fileDirname}",
                "&&",
                "acc","s","${fileDirname}/main.cpp", "--", 
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "build c++ main.cpp"
              ],
            "problemMatcher": []
        },
    ]
}
